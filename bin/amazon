#!/usr/bin/env bash

CMD="$1"
if [[ "$CMD" == "" ]]; then
  echo "usage: $0 <up|halt|destroy>"
  exit 1
fi

DISTROS=$(bin/build --list | grep -v Box | awk '{print $2}' | grep amazon)
for distro in $DISTROS; do
  if [[ "$CMD" == "up" ]]; then
    echo "vagrant up $distro --provider aws &"
    vagrant up $distro --provider aws &
  elif [[ "$CMD" == "ssh" ]]; then
    echo "$distro: ${@:2}"
    vagrant ssh $distro -- "${@:2}"
    echo
  else
    vagrant $CMD $distro
  fi
done
