#!/usr/bin/env bash

CMD="$1"
if [[ "$CMD" == "" ]]; then
  echo "usage: $0 <up|halt|destroy>"
  exit 1
fi

DISTROS=$(bin/build --list | grep -v Box | awk '{print $2}' | grep ubuntu)
for distro in $DISTROS; do
  if [[ "$CMD" == "up" ]]; then
    vagrant up $distro --provider aws
  else
    vagrant $CMD $distro
  fi
done
